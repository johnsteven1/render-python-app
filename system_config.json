{
  "system": {
    "name": "Ethical Website Monitor",
    "version": "1.0.0",
    "description": "Respectful website monitoring system",
    "author": "Your Name",
    "license": "MIT",
    "repository": "https://github.com/johnsteven1/render-python-app.git"
  },
  "monitoring": {
    "enabled": true,
    "default_interval": 300,
    "min_interval": 300,
    "max_requests_per_hour": 12,
    "timeout_seconds": 10,
    "user_agent": "EthicalMonitor/1.0 (+https://yourwebsite.com/monitor)",
    "respect_robots_txt": true,
    "follow_redirects": true
  },
  "storage": {
    "max_entries": 1000,
    "rotation_days": 30,
    "backup_enabled": true,
    "backup_count": 5,
    "encrypt_data": false
  },
  "notifications": {
    "enabled": false,
    "email": "",
    "webhook_url": "",
    "alert_threshold": 3,
    "cooldown_minutes": 30
  },
  "web_interface": {
    "port": 5000,
    "host": "0.0.0.0",
    "debug": false,
    "require_auth": false,
    "session_timeout": 3600,
    "allow_cors_for": []
  },
  "security": {
    "rate_limiting": true,
    "max_manual_checks_per_minute": 2,
    "cors_enabled": false,
    "require_api_key": false,
    "log_failed_attempts": true
  },
  "logging": {
    "level": "INFO",
    "max_file_size": "10MB",
    "backup_count": 5,
    "log_to_console": true
  },
  "legal_notice": "This software is for monitoring websites you own or have explicit permission to monitor. By using this software, you agree to respect website terms of service, rate limits, and applicable laws. Improper use may violate laws including the Computer Fraud and Abuse Act (CFAA)."
}
